#include<iostream>
using namespace std;

class calculator
{
public:
		
	double addition(double num1, double num2)
	{
		return num1 + num2;
	}

	double subtraction(double num1, double num2)
	{
		return num1 - num2;
	}

	double multiplication(double num1, double num2)
	{
		return num1 * num2;
	}

	double division(double num1, double num2)
	{
		if (num2 == 0)
		{
			cout << "\n\tMathematical Error\n";
			return 000;
		}
		return num1 / num2;
	}

	bool other_operation()
	{
		char ch;
		cout << "Do you want to perform another operation (yes/No): ";
		cin >> ch;
		return(ch == 'y' || ch == 'Y');
	}
};

int main()
{
	calculator c;
	char op;
	double number1, number2, result;
	cout << "	Wellcome ";
	do
	{

		cout << "\n\n	1	2	3\n	4	5	6\n	7	8	9\n		0" << endl;
		cout << "Enter 1st number: ";
		cin >> number1;
		cout << "Enter 2nd number: ";
		cin >> number2;
		while (true)
		{
			cout << "Operation (/,+,-,*): ";
			cin >> op;
			if (op == '+' || op == '-' || op == '/' || op == '*')
			{
				break;
			}
			else
			{
				cout << "\n!!!! Error !!!!" << endl << "+,-,*,/";

			}
		}
		if (op == '+')
		{
			result = c.addition(number1, number2);
		}

		if (op == '-')
		{
			result = c.subtraction(number1, number2);
		}
		if (op == '*')
		{
			result = c.multiplication(number1, number2);
		}
		if (op == '/')
		{
			result = c.division(number1, number2);
		}

		cout << number1 << "  " << op << "  " << number2 << " = " << result << endl;
	} 
	while (c.other_operation());

	cout << "\nThank you for using me\n";
	system("pause");
	return 0;
}
